{
    "name": "dolutech/cryptnote-php",
    "description": "A PHP library for creating encrypted, self-destructing messages with view limits and optional password protection",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "encryption",
        "security",
        "self-destructing",
        "messages",
        "aes-256",
        "cryptography",
        "secure-notes",
        "one-time-secret"
    ],
    "homepage": "https://github.com/dolutech/cryptnote-php",
    "authors": [
        {
            "name": "Dolutech",
            "email": "contato@dolutech.com",
            "homepage": "https://dolutech.com"
        }
    ],
    "support": {
        "issues": "https://github.com/dolutech/cryptnote-php/issues",
        "source": "https://github.com/dolutech/cryptnote-php"
    },
    "require": {
        "php": ">=8.0",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "suggest": {
        "ext-pdo_mysql": "For MySQL database support",
        "ext-pdo_pgsql": "For PostgreSQL database support"
    },
    "autoload": {
        "psr-4": {
            "CryptNote\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CryptNote\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
